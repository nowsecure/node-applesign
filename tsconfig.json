{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    // include both JS and TS sources for migration
    "lib/**/*",
    "bin/**/*",
    "index.*",
    "example.*",
    "test/**/*",
    "*.json"
  ],
  "exclude": ["node_modules", "dist", "test"]
}
